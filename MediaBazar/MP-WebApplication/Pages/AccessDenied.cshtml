@page
@model MP_WebApplication.Pages.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">Access Denied</h1>
    <p class="lead">You do not have permission to view this page.</p>
    <p>Please ensure you are logged in with the correct account.</p>
    <p>If you believe this is an error, contact your system administrator.</p>
    <hr class="my-4">
    <p>
        <a class="btn btn-primary btn-lg" asp-area="" asp-page="/Login" role="button">Login</a>
        <a class="btn btn-secondary btn-lg" asp-area="" asp-page="/Index" role="button">Return to Home</a>
    </p>
</div>
